        <Label Content="Password" HorizontalAlignment="Left" Margin="129,159,0,0" VerticalAlignment="Top"/>
        <Button Content="Alterar Utilizador" HorizontalAlignment="Left" Margin="145,220,0,0" VerticalAlignment="Top" Width="114" Height="26" Click="Button_Click"/>

    </Grid>
</UserControl>
