<Window x:Class="PAP.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PAP"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="LoginBtn" Content="Login" HorizontalAlignment="Left" Margin="253,106,0,0" VerticalAlignment="Top" Width="83" Height="26" Click="loginBtn_Click"/>
        <TextBox x:Name="UsernameTb" HorizontalAlignment="Left" Height="18" Margin="253,159,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="157,151,0,0" VerticalAlignment="Top" Width="80"/>
        <Label Content="Password:"  HorizontalAlignment="Left" Margin="157,177,0,0" VerticalAlignment="Top" Width="80" Height="26"/>
        <PasswordBox x:Name="PasswordTb" HorizontalAlignment="Left" Margin="253,185,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
